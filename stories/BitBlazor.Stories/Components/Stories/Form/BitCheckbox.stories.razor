@attribute [Stories("Form/BitCheckbox")]

<Stories TComponent="BitCheckbox">
    <ArgType For="_ => _.Label" />
    <ArgType For="_ => _.Id" />
    <ArgType For="_ => _.Disabled" />
    <ArgType For="_ => _.Inline" />
    <ArgType For="_ => _.CssClass" />

    <Story Name="Default">
        <Arguments>
            <Arg For="_ => _.Label" Value="@("Label")" />
            <Arg For="_ => _.Disabled" Value="false" />
            <Arg For="_ => _.Inline" Value="false" />
        </Arguments>
        <Template>
            <div class="px-2 py-2">
                <BitCheckbox @attributes="@context.Args"
                             @bind-Value="model.DefaultStoryValue"/>
            </div>
        </Template>
    </Story>

    <Story Name="Inline checkbox">
        <Template>
            <div class="px-2 py-2">
                <fieldset>
                    <legend>Checkbox group</legend>

                    <BitCheckbox Label="Unchecked checkbox"
                                 @bind-Value="model.InlineCheckboxStoryUnchecked"
                                 Inline="true" />
                    <BitCheckbox Label="Checked checkbox"
                                 @bind-Value="model.InlineCheckboxStoryChecked"
                                 Inline="true" />
                </fieldset>
            </div>
        </Template>
    </Story>

    <Story Name="Disabled">
        <Template>
            <div class="px-2 py-2">
                <fieldset>
                    <legend>Checkbox group</legend>

                    <BitCheckbox Label="Unchecked disabled checkbox"
                                 @bind-Value="model.DisabledCheckboxStoryUnchecked"
                                 Disabled="true" />
                    <BitCheckbox Label="Checked disabled checkbox"
                                 @bind-Value="model.DisabledCheckboxStoryChecked"
                                 Disabled="true" />
                </fieldset>
            </div>
        </Template>
    </Story>

    <Story Name="Grouped">
        <Template>
            <div class="px-2 py-2">
                <div class="row">
                    <fieldset class="col-12 col-md-6">
                        <legend>Checkbox group</legend>

                        <BitCheckbox Label="Selected checkbox"
                                     @bind-Value="model.GroupedCheckboxStoryChecked"
                                     Grouped="true" />

                        <BitCheckbox Label="Unchecked checkbox"
                                     @bind-Value="model.GroupedCheckboxStoryUnchecked"
                                     Grouped="true" />

                        <BitCheckbox Label="Disabled checkbox"
                                     @bind-Value="model.GroupedCheckboxStoryDisabled"
                                     Grouped="true"
                                     Disabled="true" />
                    </fieldset>
                    <fieldset class="col-12 col-md-6">
                        <legend>Checkbox group</legend>

                        <BitCheckbox Label="Selected checkbox"
                                     @bind-Value="model.GroupedCheckboxStoryChecked"
                                     Grouped="true"
                                     AdditionalTextId="checkbox-help1">
                            <AdditionalText>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas molestie libero
                            </AdditionalText>
                        </BitCheckbox>

                        <BitCheckbox Label="Unchecked checkbox"
                                     @bind-Value="model.GroupedCheckboxStoryUnchecked"
                                     Grouped="true"
                                     AdditionalTextId="checkbox-help2">
                            <AdditionalText>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas molestie libero
                            </AdditionalText>
                        </BitCheckbox>

                        <BitCheckbox Label="Disabled checkbox"
                                     @bind-Value="model.GroupedCheckboxStoryDisabled"
                                     Grouped="true"
                                     Disabled="true"
                                     AdditionalTextId="checkbox-help3">
                            <AdditionalText>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas molestie libero
                            </AdditionalText>
                        </BitCheckbox>
                    </fieldset>
                </div>
            </div>
        </Template>
    </Story>
</Stories>

@code {
    private ViewModel model = new();

    class ViewModel
    {
        public bool DefaultStoryValue { get; set; }

        public bool InlineCheckboxStoryUnchecked { get; set; }

        public bool InlineCheckboxStoryChecked { get; set; } = true;

        public bool DisabledCheckboxStoryUnchecked { get; set; }

        public bool DisabledCheckboxStoryChecked { get; set; } = true;

        public bool GroupedCheckboxStoryChecked { get; set; } = true;

        public bool GroupedCheckboxStoryUnchecked { get; set; }

        public bool GroupedCheckboxStoryDisabled { get; set; }

        public bool GroupedCheckboxWithAdditionalTextStoryChecked { get; set; } = true;

        public bool GroupedCheckboxWithAdditionalTextStoryUnchecked { get; set; }

        public bool GroupedCheckboxWithAdditionalTextStoryDisabled { get; set; }
    }
}
