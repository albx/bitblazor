@attribute [Stories("Form/BitTextAreaField")]

<Stories TComponent="BitTextAreaField">
    <ArgType For="_ => _.Label" />
    <ArgType For="_ => _.Id" />
    <ArgType For="_ => _.Placeholder" />
    <ArgType For="_ => _.Disabled" />
    <ArgType For="_ => _.Readonly" />
    <ArgType For="_ => _.Plaintext" />
    <ArgType For="_ => _.CssClass" />
    <ArgType For="_ => _.Required" />
    <ArgType For="_ => _.Size" Control="ControlType.Select" />
    <ArgType For="_ => _.Rows" />

    <Story Name="Default">
        <Arguments>
            <Arg For="_ => _.Label" Value="@("Label")" />
            <Arg For="_ => _.Placeholder" />
            <Arg For="_ => _.Disabled" Value="false" />
            <Arg For="_ => _.Readonly" Value="false" />
            <Arg For="_ => _.Plaintext" Value="false" />
            <Arg For="_ => _.Size" Value="Size.Default" />
            <Arg For="_ => _.Rows" Value="3"/>
        </Arguments>
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextAreaField @attributes="context.Args"
                                  @bind-Value="model.DefaultStoryValue" />
            </div>
        </Template>
    </Story>

    <Story Name="Label and Placehoder">
        <Template>
            <div class="px-2 py-2">
                <div class="row mt-4">
                    <BitTextAreaField Label="Sample label"
                                      @bind-Value="model.LabelStoryValue"
                                      Rows="3" />
                </div>
                <div class="row mt-4">
                    <BitTextAreaField Label="Sample label"
                                      Placeholder="Sample text"
                                      @bind-Value="model.PlaceholderStoryValue"
                                      Rows="3" />
                </div>
            </div>
        </Template>
    </Story>

    <Story Name="Additional text">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextAreaField Label="Sample label"
                                  @bind-Value="model.AdditionalTextStoryValue"
                                  Placeholder="Sample text"
                                  AdditionalTextId="helper-text"
                                  Rows="3">
                    <AdditionalText>
                        Some other text
                    </AdditionalText>
                </BitTextAreaField>
            </div>
        </Template>
    </Story>

    <Story Name="Disabled">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextAreaField Label="Disabled content"
                                  @bind-Value="model.DisabledStoryValue"
                                  Disabled="true"
                                  Rows="3" />
            </div>
        </Template>
    </Story>

    <Story Name="Readonly">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextAreaField Label="Read-only content"
                                  @bind-Value="model.ReadonlyStoryValue"
                                  Readonly="true"
                                  Rows="3" />
            </div>
        </Template>
    </Story>

    <Story Name="Plaintext">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextAreaField Label="Read-only content"
                                  @bind-Value="model.PlaintextStoryValue"
                                  Plaintext="true"
                                  Rows="3" />
            </div>
        </Template>
    </Story>

    <Story Name="Sizes">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextAreaField Label="Large"
                                  Placeholder="Type your name"
                                  @bind-Value="model.SizeStoryLargeValue"
                                  Size="Size.Large"
                                  Rows="3" />

                <BitTextAreaField Label="Default"
                                  Placeholder="Type your name"
                                  @bind-Value="model.SizeStoryDefaultValue"
                                  Size="Size.Default"
                                  Rows="3" />


                <BitTextAreaField Label="Small"
                                  Placeholder="Type your name"
                                  @bind-Value="model.SizeStorySmallValue"
                                  Size="Size.Small"
                                  Rows="3" />
            </div>
        </Template>
    </Story>
</Stories>

@code {
    private ViewModel model = new();

    class ViewModel
    {
        public string? DefaultStoryValue { get; set; }

        public string? LabelStoryValue { get; set; }

        public string? PlaceholderStoryValue { get; set; }

        public string? AdditionalTextStoryValue { get; set; }

        public string? DisabledStoryValue { get; set; }

        public string? ReadonlyStoryValue { get; set; } = "Read only";

        public string? PlaintextStoryValue { get; set; } = "Read only";

        public string? SizeStoryLargeValue { get; set; }

        public string? SizeStoryDefaultValue { get; set; }

        public string? SizeStorySmallValue { get; set; }
    }
}
