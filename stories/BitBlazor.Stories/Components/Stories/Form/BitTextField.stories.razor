@attribute [Stories("Form/BitTextField")]

<Stories TComponent="BitTextField">
    <ArgType For="_ => _.Label" />
    <ArgType For="_ => _.Id" />
    <ArgType For="_ => _.Placeholder" />
    <ArgType For="_ => _.Type" Control="ControlType.Select" />
    <ArgType For="_ => _.Disabled" />
    <ArgType For="_ => _.Readonly" />
    <ArgType For="_ => _.Plaintext" />
    <ArgType For="_ => _.CssClass" />
    <ArgType For="_ => _.Required" />
    <ArgType For="_ => _.Size" Control="ControlType.Select" />

    <Story Name="Default">
        <Arguments>
            <Arg For="_ => _.Label" Value="@("Label")" />
            <Arg For="_ => _.Placeholder" />
            <Arg For="_ => _.Type" Value="TextFieldType.Text" />
            <Arg For="_ => _.Disabled" Value="false" />
            <Arg For="_ => _.Readonly" Value="false" />
            <Arg For="_ => _.Plaintext" Value="false" />
            <Arg For="_ => _.Size" Value="Size.Default" />
        </Arguments>
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextField @attributes="context.Args"
                              @bind-Value="model.DefaultStoryValue" />
            </div>
        </Template>
    </Story>

    <Story Name="Label and Placehoder">
        <Template>
            <div class="px-2 py-2">
                <div class="row mt-4">
                    <BitTextField Label="Sample label"
                                  @bind-Value="model.LabelStoryValue" />
                </div>
                <div class="row mt-4">
                    <BitTextField Label="Sample label"
                                  Placeholder="Sample text"
                                  @bind-Value="model.PlaceholderStoryValue" />
                </div>
            </div>
        </Template>
    </Story>

    <Story Name="Additional text">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextField Label="Sample label"
                              @bind-Value="model.AdditionalTextStoryValue"
                              Placeholder="Sample text"
                              AdditionalTextId="helper-text">
                    <AdditionalText>
                        Some other text
                    </AdditionalText>
                </BitTextField>
            </div>
        </Template>
    </Story>

    <Story Name="Icons and buttons">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextField Label="With label"
                              @bind-Value="model.IconsStoryValue">
                    <PrependContent>
                        <span class="input-group-text">
                            <BitIcon IconName="@Icons.ItPencil"
                                     Size="IconSize.Small"
                                     aria-hidden="true" />
                        </span>
                    </PrependContent>
                </BitTextField>

                <BitTextField Label="With label and placeholder"
                              @bind-Value="model.IconsAndPlaceholderStoryValue"
                              Placeholder="Lorem ipsum">
                    <PrependContent>
                        <span class="input-group-text">
                            <BitIcon IconName="@Icons.ItPencil"
                                     Size="IconSize.Small"
                                     aria-hidden="true" />
                        </span>
                    </PrependContent>
                </BitTextField>

                <BitTextField Label="With label and primary button"
                              @bind-Value="model.IconsAndButtonStoryValue">
                    <PrependContent>
                        <span class="input-group-text">
                            <BitIcon IconName="@Icons.ItPencil"
                                     Size="IconSize.Small"
                                     aria-hidden="true" />
                        </span>
                    </PrependContent>
                    <AppendContent>
                        <div class="input-group-append">
                            <BitButton Color="Color.Primary">Send</BitButton>
                        </div>
                    </AppendContent>
                </BitTextField>
            </div>
        </Template>
    </Story>

    <Story Name="Disabled">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextField Label="Disabled content"
                              @bind-Value="model.DisabledStoryValue"
                              Disabled="true" />
            </div>
        </Template>
    </Story>

    <Story Name="Readonly">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextField Label="Read-only content"
                              @bind-Value="model.ReadonlyStoryValue"
                              Readonly="true" />
            </div>
        </Template>
    </Story>

    <Story Name="Plaintext">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextField Label="Read-only content"
                              @bind-Value="model.PlaintextStoryValue"
                              Plaintext="true" />
            </div>
        </Template>
    </Story>

    <Story Name="Sizes">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitTextField Label="Large"
                              Placeholder="Type your name"
                              @bind-Value="model.SizeStoryLargeValue"
                              Size="Size.Large" />

                <BitTextField Label="Default"
                              Placeholder="Type your name"
                              @bind-Value="model.SizeStoryDefaultValue"
                              Size="Size.Default" />


                <BitTextField Label="Small"
                              Placeholder="Type your name"
                              @bind-Value="model.SizeStorySmallValue"
                              Size="Size.Small" />
            </div>
        </Template>
    </Story>
</Stories>

@code {
    private ViewModel model = new();

    class ViewModel
    {
        public string? DefaultStoryValue { get; set; }

        public string? LabelStoryValue { get; set; }

        public string? PlaceholderStoryValue { get; set; }

        public string? AdditionalTextStoryValue { get; set; }

        public string? DisabledStoryValue { get; set; }

        public string? ReadonlyStoryValue { get; set; } = "Read only";

        public string? PlaintextStoryValue { get; set; } = "Read only";

        public string? IconsStoryValue { get; set; }

        public string? IconsAndPlaceholderStoryValue { get; set; }

        public string? IconsAndButtonStoryValue { get; set; }

        public string? SizeStoryLargeValue { get; set; }

        public string? SizeStoryDefaultValue { get; set; }

        public string? SizeStorySmallValue { get; set; }
    }
}
