@attribute [Stories("Form/BitSelectField")]

<Stories TComponent="BitSelectField<string>">
    <ArgType For="_ => _.Label" />
    <ArgType For="_ => _.Id" />
    <ArgType For="_ => _.Disabled" />
    <ArgType For="_ => _.CssClass" />

    <Story Name="Default">
        <Arguments>
            <Arg For="_ => _.Label" Value="@("Label")" />
            <Arg For="_ => _.Disabled" Value="false" />
        </Arguments>
        <Template>
            <div class="px-2 py-4">
                <BitSelectField @attributes="@context.Args"
                                @bind-Value="model.DefaultStoryValue">
                    <BitSelectItem Value="@string.Empty">Choose an option</BitSelectItem>
                    <BitSelectItem Value="@("Value 1")">Option 1</BitSelectItem>
                    <BitSelectItem Value="@("Value 2")">Option 2</BitSelectItem>
                    <BitSelectItem Value="@("Value 3")">Option 3</BitSelectItem>
                    <BitSelectItem Value="@("Value 4")">Option 4</BitSelectItem>
                    <BitSelectItem Value="@("Value 5")">Option 5</BitSelectItem>
                </BitSelectField>
            </div>
        </Template>
    </Story>

    <Story Name="Disabled select">
        <Template>
            <div class="px-2 py-4">
                <BitSelectField Label="Label"
                                Disabled="true"
                                @bind-Value="model.DefaultStoryValue">
                    <BitSelectItem Value="@string.Empty">Choose an option</BitSelectItem>
                    <BitSelectItem Value="@("Value 1")">Option 1</BitSelectItem>
                    <BitSelectItem Value="@("Value 2")">Option 2</BitSelectItem>
                    <BitSelectItem Value="@("Value 3")">Option 3</BitSelectItem>
                    <BitSelectItem Value="@("Value 4")">Option 4</BitSelectItem>
                    <BitSelectItem Value="@("Value 5")">Option 5</BitSelectItem>
                </BitSelectField>
            </div>
        </Template>
    </Story>

    <Story Name="Select with groups">
        <Template>
            <div class="px-2 py-4">
                <BitSelectField Label="Label"
                                @bind-Value="model.GroupedStoryValue">
                    <BitSelectItem Value="@string.Empty">Choose an option</BitSelectItem>
                    <BitSelectItemGroup Label="Group 1">
                        <BitSelectItem Value="@("Value 1")">Option 1</BitSelectItem>
                        <BitSelectItem Value="@("Value 2")">Option 2</BitSelectItem>
                    </BitSelectItemGroup>
                    <BitSelectItemGroup Label="Group 2">
                        <BitSelectItem Value="@("Value 3")">Option 3</BitSelectItem>
                        <BitSelectItem Value="@("Value 4")">Option 4</BitSelectItem>
                    </BitSelectItemGroup>
                </BitSelectField>
            </div>
        </Template>
    </Story>
</Stories>

@code {
    private ViewModel model = new();

    class ViewModel
    {
        public string DefaultStoryValue { get; set; } = string.Empty;

        public string DisabledStoryValue { get; set; } = string.Empty;

        public string GroupedStoryValue { get; set; } = string.Empty;
    }
}
