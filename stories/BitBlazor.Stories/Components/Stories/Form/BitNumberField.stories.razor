@attribute [Stories("Form/BitNumberField")]

<Stories TComponent="BitNumberField<decimal?>">
    <ArgType For="_ => _.Label" />
    <ArgType For="_ => _.Id" />
    <ArgType For="_ => _.Placeholder" />
    <ArgType For="_ => _.Disabled" />
    <ArgType For="_ => _.Readonly" />
    <ArgType For="_ => _.Plaintext" />
    <ArgType For="_ => _.CssClass" />
    <ArgType For="_ => _.Required" />
    <ArgType For="_ => _.Size" Control="ControlType.Select" />
    <ArgType For="_ => _.Step" />
    <ArgType For="_ => _.Min" />
    <ArgType For="_ => _.Max" />
    <ArgType For="_ => _.Adaptive" />
    <ArgType For="_ => _.IncrementButtonText" />
    <ArgType For="_ => _.DecrementButtonText" />

    <Story Name="Default">
        <Arguments>
            <Arg For="_ => _.Label" Value="@("Label")" />
            <Arg For="_ => _.Placeholder" />
            <Arg For="_ => _.Disabled" Value="false" />
            <Arg For="_ => _.Readonly" Value="false" />
            <Arg For="_ => _.Plaintext" Value="false" />
            <Arg For="_ => _.Size" Value="Size.Default" />
            <Arg For="_ => _.Step" Value="null" />
            <Arg For="_ => _.Min" Value="null" />
            <Arg For="_ => _.Max" Value="null" />
            <Arg For="_ => _.Adaptive" Value="false" />
            <Arg For="_ => _.IncrementButtonText" Value="@("Increase value")" />
            <Arg For="_ => _.DecrementButtonText" Value="@("Decrease value")" />
        </Arguments>
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitNumberField @attributes="context.Args"
                                @bind-Value="model.DefaultStoryValue" />
            </div>
        </Template>
    </Story>

    <Story Name="Width">
        <Template>
            <div class="px-2 py-2 mt-4">
                <div class="w-100">
                    <BitNumberField Label="Input number in a full width column"
                                    @bind-Value="model.FullWitdhStoryValue" />
                </div>
                <div class="w-50 mt-5">
                    <BitNumberField Label="Input number in a 50% width column"
                                    @bind-Value="model.HalfWidthStoryValue" />
                </div>
            </div>
        </Template>
    </Story>

    <Story Name="Min, Max & Step">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitNumberField Label="Min, Max & Step"
                                @bind-Value="model.MinMaxAndStepStoryValue"
                                Min="-2000"
                                Max="15000"
                                Step="500" />
            </div>
        </Template>
    </Story>

    <Story Name="Currency">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitNumberField Label="Currency"
                                @bind-Value="model.CurrencyStoryValue"
                                Min="0">
                    <SymbolContent>&euro;</SymbolContent>
                </BitNumberField>
            </div>
        </Template>
    </Story>

    <Story Name="Percentage">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitNumberField Label="Percentage"
                                @bind-Value="model.PercentageStoryValue"
                                Min="0"
                                Max="100">
                    <SymbolContent>%</SymbolContent>
                </BitNumberField>
            </div>
        </Template>
    </Story>

    <Story Name="Disabled">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitNumberField Label="Disabled"
                                @bind-Value="model.DisabledStoryValue"
                                Step="1"
                                Min="0"
                                Max="100"
                                Disabled="true" />
            </div>
        </Template>
    </Story>

    <Story Name="Readonly">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitNumberField Label="Read-only content"
                                @bind-Value="model.ReadonlyStoryValue"
                                Step="1"
                                Min="0"
                                Max="100"
                                Readonly="true" />
            </div>
        </Template>
    </Story>

    <Story Name="Adaptive">
        <Template>
            <div class="px-2 py-2 mt-4">
                <BitNumberField Label="Adaptive"
                                @bind-Value="model.AdaptiveStoryValue"
                                Adaptive="true" />
            </div>
        </Template>
    </Story>
</Stories>

@code {
    private ViewModel model = new();

    class ViewModel
    {
        public decimal? DefaultStoryValue { get; set; }

        public decimal? FullWitdhStoryValue { get; set; } = 100;

        public decimal? HalfWidthStoryValue { get; set; } = 100;

        public decimal? MinMaxAndStepStoryValue { get; set; } = 100;

        public decimal? CurrencyStoryValue { get; set; } = (decimal)3.50;

        public decimal? PercentageStoryValue { get; set; } = 50;

        public decimal? DisabledStoryValue { get; set; } = 50;

        public decimal? ReadonlyStoryValue { get; set; } = 50;

        public decimal? AdaptiveStoryValue { get; set; } = 99999;
    }
}
