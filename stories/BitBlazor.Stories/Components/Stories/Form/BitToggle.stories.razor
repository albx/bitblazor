@attribute [Stories("Form/BitToggle")]
@using BitBlazor.Form.Toggle

<Stories TComponent="BitToggle">
    <ArgType For="_ => _.Label" />
    <ArgType For="_ => _.Id" />
    <ArgType For="_ => _.Disabled" />
    <ArgType For="_ => _.CssClass" />
    <ArgType For="_ => _.ViewMode" DefaultValue="ToggleViewMode.Inline" />

    <Story Name="Default">
        <Arguments>
            <Arg For="_ => _.Label" Value="@("Label")" />
            <Arg For="_ => _.Disabled" Value="false" />
            <Arg For="_ => _.ViewMode" Value="ToggleViewMode.Inline" />
        </Arguments>
        <Template>
            <div class="px-2 py-2">
                <BitToggle @attributes="@context.Args"
                           @bind-Value="model.DefaultStoryValue" />
            </div>
        </Template>
    </Story>

    <Story Name="Disabled">
        <Template>
            <div class="px-2 py-2">
                <BitToggle Label="Toggle label"
                           Disabled="true"
                           @bind-Value="model.DefaultStoryValue" />
            </div>
        </Template>
    </Story>

    <Story Name="Inline">
        <Template>
            <div class="px-2 py-2">
                <fieldset>
                    <legend>Toggle group</legend>

                    <BitToggle Label="Toggle label 1"
                               @bind-Value="model.InlineStoryValue1"
                               ViewMode="ToggleViewMode.Inline" />
                    <BitToggle Label="Toggle label 2"
                               @bind-Value="model.InlineStoryValue2"
                               ViewMode="ToggleViewMode.Inline" />
                </fieldset>
            </div>
        </Template>
    </Story>

    <Story Name="Grouped">
        <Template>
            <div class="px-2 py-2">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <fieldset>
                            <legend>Toggle group</legend>

                            <BitToggle Label="Toggle on"
                                       @bind-Value="model.GroupedOnStoryValue"
                                       ViewMode="ToggleViewMode.Grouped" />
                            <BitToggle Label="Toggle off"
                                       @bind-Value="model.GroupedOffStoryValue"
                                       ViewMode="ToggleViewMode.Grouped" />
                            <BitToggle Label="Toggle disabled"
                                       @bind-Value="model.GroupedDisabledStoryValue"
                                       ViewMode="ToggleViewMode.Grouped" />
                        </fieldset>
                    </div>
                    <div class="col-12 col-md-6">
                        <fieldset>
                            <legend>Toggle group</legend>

                            <BitToggle Label="Toggle on"
                                       @bind-Value="model.GroupedWithAdditionalTextOnStoryValue"
                                       ViewMode="ToggleViewMode.Grouped"
                                       AdditionalTextId="toggle-help1">
                                <AdditionalText>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas molestie libero
                                </AdditionalText>
                            </BitToggle>
                            <BitToggle Label="Toggle off"
                                       @bind-Value="model.GroupedWithAdditionalTextOffStoryValue"
                                       ViewMode="ToggleViewMode.Grouped"
                                       AdditionalTextId="toggle-help2">
                                <AdditionalText>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas molestie libero
                                </AdditionalText>
                            </BitToggle>
                            <BitToggle Label="Toggle disabled"
                                       @bind-Value="model.GroupedWithAdditionalTextDisabledStoryValue"
                                       ViewMode="ToggleViewMode.Grouped"
                                       AdditionalTextId="toggle-help2">
                                <AdditionalText>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas molestie libero
                                </AdditionalText>
                            </BitToggle>
                        </fieldset>
                    </div>
                </div>
            </div>
        </Template>
    </Story>
</Stories>

@code {
    private readonly ViewModel model = new();

    class ViewModel
    {
        public bool DefaultStoryValue { get; set; }

        public bool DisabledStoryValue { get; set; }

        public bool InlineStoryValue1 { get; set; }

        public bool InlineStoryValue2 { get; set; }

        public bool GroupedOnStoryValue { get; set; } = true;

        public bool GroupedOffStoryValue { get; set; }

        public bool GroupedDisabledStoryValue { get; set; }

        public bool GroupedWithAdditionalTextOnStoryValue { get; set; } = true;

        public bool GroupedWithAdditionalTextOffStoryValue { get; set; }

        public bool GroupedWithAdditionalTextDisabledStoryValue { get; set; }
    }
}
