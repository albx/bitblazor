@inherits TestContext

@code {
    [Theory]
    [InlineData(Color.Primary, "bg-primary")]
    [InlineData(Color.Secondary, "bg-secondary")]
    [InlineData(Color.Success, "bg-success")]
    [InlineData(Color.Danger, "bg-danger")]
    [InlineData(Color.Warning, "bg-warning")]
    public void BitAlert_Should_Render_Background_Color_Correctly(Color color, string backgroundCssClass)
    {
        var component = Render(@<BitBadge Text="Test" BackgroundColor="color" />);

        component.MarkupMatches(
            @<span class="badge @backgroundCssClass">Test</span>);
    }

    [Theory]
    [InlineData(Color.Primary, "bg-primary")]
    [InlineData(Color.Secondary, "bg-secondary")]
    [InlineData(Color.Success, "bg-success")]
    [InlineData(Color.Danger, "bg-danger")]
    [InlineData(Color.Warning, "bg-warning")]
    public void BitAlert_Should_Render_Rounded_Pill_Correctly(Color color, string backgroundCssClass)
    {
        var component = Render(@<BitBadge Text="Test" BackgroundColor="color" Rounded="true" />);

        component.MarkupMatches(
            @<span class="badge @backgroundCssClass rounded-pill">Test</span>);
    }
}
