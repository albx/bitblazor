    [Fact]
    public void BitTextAreaField_Should_Show_Invalid_Class_When_Field_Has_Validation_Error()
    {
        var model = new TextAreaValidationModel();
        var editContext = new EditContext(model);
        var submitted = false;

        var component = Render(
            @<EditForm EditContext="@editContext" OnValidSubmit="() => submitted = true">
                <DataAnnotationsValidator />
                <BitTextAreaField Label="Description"
                                  Id="test-description"
                                  Rows="3"
                                  @bind-Value="@model.Description"
                                  For="@(() => model.Description)" />
                <button type="submit" id="submit-btn">Submit</button>
             </EditForm>);

        // Trigger validation by submitting the form
        var form = component.Find("form");
        form.Submit();

        var textarea = component.Find("textarea#test-description");
        Assert.Contains("is-invalid", textarea.ClassList);
        Assert.DoesNotContain("just-validate-success-field", textarea.ClassList);
        Assert.False(submitted);
    }

