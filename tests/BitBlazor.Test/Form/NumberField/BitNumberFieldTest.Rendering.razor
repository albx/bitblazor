    [Fact]
    public void BitNumberField_Should_Show_Invalid_Class_When_Field_Has_Validation_Error()
    {
        var model = new NumericValidationModel();
        var editContext = new EditContext(model);
        var submitted = false;

        var component = Render(
            @<EditForm EditContext="@editContext" OnValidSubmit="() => submitted = true">
                <DataAnnotationsValidator />
                <BitNumberField Label="Age"
                                Id="test-age"
                                @bind-Value="@model.Age"
                                For="@(() => model.Age)" />
                <button type="submit" id="submit-btn">Submit</button>
             </EditForm>);

        // Trigger validation by submitting the form
        var form = component.Find("form");
        form.Submit();

        var input = component.Find("input#test-age");
        Assert.Contains("is-invalid", input.ClassList);
        Assert.DoesNotContain("just-validate-success-field", input.ClassList);
        Assert.False(submitted);
    }

    [Fact]
    public void BitNumberField_Should_Show_Success_Class_When_Valid_Field_Is_Modified()
    {
        var model = new NumericValidationModel { Age = 25 };
